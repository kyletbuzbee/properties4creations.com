{
  "name": "properties4creations",
  "version": "2.0.0",
  "description": "Enterprise-grade static site for Properties 4 Creations",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:11ty": "eleventy --serve --quiet --incremental",
    "dev:css": "tailwindcss -i ./src/css/input.css -o ./dist/css/style.css --watch --minify",
    "build": "npm run build:validate && npm-run-all --parallel build:css build:seo build:sw --serial build:11ty audit:links",
    "build:validate": "node scripts/validate-properties.js",
    "build:11ty": "eleventy --output=./dist",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./dist/css/style.css --minify",
    "build:seo": "node scripts/generate-sitemap.js",
    "build:sw": "echo 'Service worker generation temporarily disabled due to workbox version compatibility issues'",
    "clean": "rd /s /q dist 2>nul && mkdir dist",
    "prebuild": "npm run clean",
    "test": "npm-run-all --parallel lint format --serial test:all",
    "test:basic": "playwright test tests/basic.spec.js",
    "test:comprehensive": "playwright test tests/comprehensive.spec.js",
    "test:accessibility": "playwright test tests/accessibility.spec.js",
    "test:performance": "playwright test tests/performance.spec.js",
    "test:full": "playwright test --project=chromium",
    "test:all": "npm-run-all test:basic test:comprehensive test:accessibility test:performance",
    "test:install": "playwright install",
    "lint:js": "eslint src/js/**/*.js tests/**/*.js scripts/**/*.js",
    "lint:css": "stylelint src/css/**/*.css",
    "lint": "npm-run-all --parallel lint:js lint:css",
    "format": "prettier --write \"**/*.{js,json,css,md,html,njk}\"",
    "audit:links": "node scripts/audit-links.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@playwright/test": "^1.57.0",
    "axe-playwright": "^2.2.2",
    "critters": "^0.0.23",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "sharp": "^0.33.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.18",
    "workbox-cli": "^2.1.3"
  },
  "keywords": [
    "housing",
    "veterans",
    "section8",
    "east-texas"
  ],
  "author": "Properties 4 Creations",
  "license": "MIT"
}
