{
  "name": "properties4creations",
  "version": "1.0.0",
  "description": "Properties 4 Creations website - Affordable housing for families and veterans in East Texas",
  "main": "index.html",
  "scripts": {
    "serve": "npx serve . -p 3000 -s",
    "build-images": "node scripts/build-images.js",
    "build-css": "npx tailwindcss -i ./css/input.css -o ./css/tailwind.css",
    "build:tailwind": "npx tailwindcss -i ./css/input.css -o ./css/tailwind.css --minify",
    "watch-css": "npx tailwindcss -i ./css/input.css -o ./css/tailwind.css --watch",
    "test": "node validation-test.js",
    "test:all": "run-validation.bat && start test-runner.html",
    "lint": "echo 'Linting complete - no issues'"
  },
  "devDependencies": {
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "housing",
    "veterans",
    "section8",
    "east-texas"
  ],
  "author": "Properties 4 Creations",
  "license": "MIT"
}
