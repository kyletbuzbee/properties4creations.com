<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or 'Premium Affordable Housing For Families and Veterans' }} | Properties 4 Creations</title>
    <meta name="description" content="{{ description or 'Affordable housing solutions for families and veterans in East Texas. Transparent pricing, premium renovations, and community impact.' }}">
    <link rel="canonical" href="https://properties4creations.com{{ page.url }}">

    <meta property="og:type" content="website">
    <meta property="og:url" content="https://properties4creations.com{{ page.url }}">
    <meta property="og:title" content="{{ title or 'Premium Affordable Housing For Families and Veterans' }} | Properties 4 Creations">
    <meta property="og:description" content="{{ description or 'Affordable housing solutions for families and veterans in East Texas. Transparent pricing, premium renovations, and community impact.' }}">
    <meta property="og:image" content="https://properties4creations.com{% if banner and banner.image %}/public/images/{{ banner.image }}{% else %}/public/images/logo/brand-logo.svg{% endif %}">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title or 'Premium Affordable Housing For Families and Veterans' }} | Properties 4 Creations">
    <meta name="twitter:description" content="{{ description or 'Affordable housing solutions for families and veterans in East Texas. Transparent pricing, premium renovations, and community impact.' }}">
    <meta name="twitter:image" content="https://properties4creations.com{% if banner and banner.image %}/public/images/{{ banner.image }}{% else %}/public/images/logo/brand-logo.svg{% endif %}">

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@graph": [
            {
                "@type": "Organization",
                "@id": "https://properties4creations.com/#organization",
                "name": "Properties 4 Creations",
                "url": "https://properties4creations.com",
                "logo": {
                    "@type": "ImageObject",
                    "url": "https://properties4creations.com/public/images/logo/brand-logo.svg",
                    "width": 200,
                    "height": 60
                },
                "contactPoint": {
                    "@type": "ContactPoint",
                    "contactType": "Customer Service",
                    "telephone": "+1-903-283-1770",
                    "email": "contact@properties4creations.com",
                    "availableLanguage": "English",
                    "hoursAvailable": {
                        "@type": "OpeningHoursSpecification",
                        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                        "opens": "09:00",
                        "closes": "18:00"
                    }
                },
                "address": {
                    "@type": "PostalAddress",
                    "addressLocality": "Tyler",
                    "addressRegion": "TX",
                    "postalCode": "75701",
                    "addressCountry": "US"
                }
            },
            {
                "@type": "WebSite",
                "@id": "https://properties4creations.com/#website",
                "url": "https://properties4creations.com",
                "name": "Properties 4 Creations",
                "description": "Affordable housing solutions for families and veterans in East Texas. Transparent pricing, premium renovations, and community impact.",
                "publisher": {
                    "@id": "https://properties4creations.com/#organization"
                },
                "potentialAction": {
                    "@type": "SearchAction",
                    "target": "https://properties4creations.com/projects/",
                    "query-input": "required name=search"
                }
            },
            {
                "@type": "WebPage",
                "@id": "https://properties4creations.com{{ page.url }}",
                "url": "https://properties4creations.com{{ page.url }}",
                "name": "{{ title or 'Premium Affordable Housing For Families and Veterans' }}",
                "description": "{{ description or 'Affordable housing solutions for families and veterans in East Texas.' }}",
                "isPartOf": {
                    "@id": "https://properties4creations.com/#website"
                },
                "primaryImageOfPage": {
                    "@type": "ImageObject",
                    "url": "https://properties4creations.com{% if banner and banner.image %}/public/images/{{ banner.image }}{% else %}/public/images/logo/brand-logo.svg{% endif %}"
                },
                "datePublished": "2024-01-01",
                "dateModified": "2024-01-01T00:00:00Z"
            },
            {
                "@type": "BreadcrumbList",
                "@id": "https://properties4creations.com{{ page.url }}#breadcrumb",
                "itemListElement": [
                    {
                        "@type": "ListItem",
                        "position": 1,
                        "name": "Home",
                        "item": "https://properties4creations.com"
                    },
                    {
                        "@type": "ListItem",
                        "position": 2,
                        "name": "{{ title or 'Properties 4 Creations' }}",
                        "item": "https://properties4creations.com{{ page.url }}"
                    }
                ]
            }
        ]
    }
    </script>

    <!-- Performance Optimizations -->
    <link rel="preload" href="/public/images/logo/brand-logo-header.svg" as="image" crossorigin>
    {% if banner and banner.image %}
    <link rel="preload" href="/public/images/optimized/banners/{{ banner.image | replace('.webp','') }}.jpg" as="image" crossorigin>
    {% endif %}

    <!-- Font preloading for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Merriweather:wght@400;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Merriweather:wght@400;700&display=swap"></noscript>

    <link rel="stylesheet" href="/css/style.css?v={{ site.version or '1.0.0' }}">

    <!-- Critical CSS inlining for better performance -->
    <style>
    /* Critical CSS - loaded above the fold */
    .skip-to-content {
        position: absolute;
        left: -9999px;
        z-index: 9999;
        padding: 8px 16px;
        background: #0B1120;
        color: white;
        border-radius: 4px;
        font-size: 14px;
        text-decoration: none;
        font-weight: 500;
    }
    .skip-to-content:focus {
        left: 16px;
        top: 16px;
    }
    </style>

    {% block head %}{% endblock %}
</head>
<body class="bg-brand-beige flex flex-col min-h-screen">
    <a href="#main" class="skip-to-content btn-base bg-brand-wood text-white absolute -top-96 focus:top-4 focus:left-4 z-50">Skip to main content</a>

    {% include "header.html" %}

    {% include "banner.njk" %}

    <main id="main" class="flex-grow">
        {{ content | safe }}
    </main>

    {% include "footer.html" %}

    <script src="/js/accessibility-enhanced.js" defer></script>
    {% block scripts %}{% endblock %}

    <!-- Service Worker Registration -->
    <script>
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
            navigator.serviceWorker.register('/sw.js')
                .then(registration => {
                    console.log('ServiceWorker registered with scope:', registration.scope);
                })
                .catch(error => {
                    console.log('ServiceWorker registration failed:', error);
                });
        });
    }
    </script>

    <!-- Scroll Animations -->
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
    });
    </script>
</body>
</html>
