---
layout: base.njk
---
{% include "header.njk" %}

<div class="relative h-[60vh] min-h-[500px]">
    {% respimg banner.image, title, "w-full h-full object-cover" %}
    <div class="absolute inset-0 bg-gradient-to-t from-brand-navy via-brand-navy/50 to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-full p-8 md:p-12">
        <div class="container">
            <span class="inline-block px-3 py-1 mb-4 text-xs font-bold tracking-wider text-brand-navy uppercase bg-brand-wood rounded-full">
                {{ status | default("Available") }}
            </span>
            <h1 class="text-4xl md:text-6xl font-heading font-bold text-white mb-2">{{ title }}</h1>
            <p class="text-xl text-slate-300 flex items-center gap-2">
                <svg class="w-5 h-5 text-brand-wood" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                {{ city }}, {{ state | default("TX") }}
            </p>
        </div>
    </div>
</div>

<section class="py-16 bg-brand-beige">
    <div class="container grid grid-cols-1 lg:grid-cols-3 gap-12">

        <div class="lg:col-span-2 space-y-12">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 p-6 bg-white rounded-2xl shadow-subtle border border-slate-100">
                <div class="text-center p-4 border-r border-slate-100 last:border-0">
                    <span class="block text-2xl font-bold text-brand-navy">{{ bedrooms }}</span>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">Bed</span>
                </div>
                <div class="text-center p-4 border-r border-slate-100 last:border-0">
                    <span class="block text-2xl font-bold text-brand-navy">{{ bathrooms }}</span>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">Bath</span>
                </div>
                <div class="text-center p-4 border-r border-slate-100 last:border-0">
                    <span class="block text-2xl font-bold text-brand-navy">{{ sqft }}</span>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">Sq Ft</span>
                </div>
                <div class="text-center p-4">
                    <span class="block text-2xl font-bold text-green-600">${{ price }}</span>
                    <span class="text-xs text-slate-500 uppercase tracking-wide">/ Month</span>
                </div>
            </div>

            <div class="prose prose-lg text-slate-600 max-w-none">
                {{ content | safe }}
            </div>

            {% if renovationSpecs and renovationSpecs.length > 0 %}
            <div class="bg-white border border-slate-200 rounded-xl p-8 shadow-sm">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-2xl font-bold text-brand-navy">Renovation Specifications</h3>
                    <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded-full">CERTIFIED INSPECTION</span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-12 text-sm">
                    {% for spec in renovationSpecs %}
                    <div class="flex justify-between border-b border-slate-100 pb-2">
                        <span class="text-slate-500">{{ spec.label }}</span>
                        <span class="font-semibold text-brand-navy">{{ spec.value }}</span>
                    </div>
                    {% endfor %}
                </div>

                <div class="mt-6 p-4 bg-slate-50 rounded-lg flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    <p class="text-sm text-slate-600 leading-relaxed">
                        <strong>Landlord Guarantee:</strong> We manage what we renovate. This property includes maintenance coverage and quality assurance.
                    </p>
                </div>
            </div>
            {% endif %}

            {% if amenities and amenities.length > 0 %}
            <div>
                <h3 class="text-2xl font-bold text-brand-navy mb-6">Property Features</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% for amenity in amenities %}
                    <div class="bg-white rounded-lg p-6 shadow-sm border border-slate-100">
                        <h4 class="text-lg font-bold text-brand-navy mb-3">{{ amenity.title }}</h4>
                        <ul class="space-y-2">
                            {% for item in amenity.items %}
                            <li class="flex items-center gap-2">
                                <span class="text-green-500 flex-shrink-0">âœ“</span>
                                <span class="text-slate-700">{{ item }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}

        </div>

        <div class="relative">
            <div class="sticky top-24 bg-white p-8 rounded-2xl shadow-wood border-t-4 border-brand-wood">
                <h3 class="text-xl font-bold text-brand-navy mb-4">Interested in this home?</h3>
                <p class="text-slate-600 mb-6 text-sm">Our properties rent quickly. Send an inquiry to schedule a viewing.</p>

                {% include "contact-form-sidebar.njk" %}
            </div>
        </div>
    </div>
</section>

{% include "footer.html" %}
