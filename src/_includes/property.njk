---
layout: base.njk
---

{% block head %}
{% if banner and banner.image %}
<link rel="preload" href="/images/banners/{{ banner.image }}" as="image" crossorigin>
{% endif %}
{% endblock %}

{% include "banner.njk" %}

<!-- MAIN CONTENT -->
<main id="main">
<!-- Before/After Comparison Hero (if available) -->
{% if beforeAfterImages and beforeAfterImages.before and beforeAfterImages.after %}
<section class="bg-slate-900 text-white py-8">
    <div class="max-w-6xl mx-auto px-4">
        <div class="bg-slate-800 rounded-lg p-8 text-center">
            <div class="compare-slider relative w-full h-[500px] md:h-[600px] overflow-hidden group rounded-xl shadow-2xl my-8">
                <!-- After Image -->
                <div class="compare-after absolute inset-0 w-full h-full bg-cover bg-center" style="background-image: url('/images/{{ beforeAfterImages.after }}')"></div>

                <!-- Before Image Overlay -->
                <div id="compare-overlay" class="compare-before absolute inset-0 w-[50%] h-full bg-cover bg-center border-r-4 border-white z-10" style="background-image: url('/images/{{ beforeAfterImages.before }}')"></div>

                <!-- Slider Control -->
                <label for="before-after-slider" class="sr-only">Adjust before and after comparison (left for before, right for after)</label>
                <input type="range" id="before-after-slider" min="0" max="100" value="50" class="absolute inset-0 w-full h-full opacity-0 cursor-ew-resize z-30" oninput="document.getElementById('compare-overlay').style.width = this.value + '%'">

                <!-- Labels -->
                <div class="compare-label compare-label-after absolute top-6 right-6 bg-brand-sage/90 backdrop-blur text-white px-4 py-2 rounded-lg font-bold shadow-lg z-20">
                    AFTER: Premium Finish
                </div>
                <div class="compare-label compare-label-before absolute top-6 left-6 bg-slate-800/90 backdrop-blur text-white px-4 py-2 rounded-lg font-bold shadow-lg">
                    BEFORE: Initial State
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

<!-- Property Overview -->
<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Property Details -->
            <div class="lg:col-span-2">
                <h1 class="text-4xl font-bold text-brand-navy mb-4">{{ title }}</h1>

                <div class="flex flex-wrap items-center gap-4 mb-6">
                    {% if voucherType %}
                    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">{{ voucherType }}</span>
                    {% endif %}
                    {% if tags %}
                    {% for tag in tags %}
                    {% if tag != "properties" %}
                    <span class="px-3 py-1 bg-brand-navy/10 text-brand-navy rounded-full text-sm font-medium">{{ tag }}</span>
                    {% endif %}
                    {% endfor %}
                    {% endif %}
                    {% if price %}
                    <span class="text-2xl font-bold text-brand-navy">${{ price }}/mo</span>
                    {% endif %}
                </div>

                <div class="prose max-w-none text-slate-700 mb-6">
                    {{ content | safe }}
                </div>

                <!-- Quick Facts Grid -->
                {% if bedrooms or bathrooms or sqft or propertyType %}
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
                    {% if bedrooms %}
                    <div class="text-center">
                        <div class="text-2xl font-bold text-brand-navy">{{ bedrooms }}</div>
                        <div class="text-sm text-slate-600">Bedrooms</div>
                    </div>
                    {% endif %}
                    {% if bathrooms %}
                    <div class="text-center">
                        <div class="text-2xl font-bold text-brand-navy">{{ bathrooms }}</div>
                        <div class="text-sm text-slate-600">Bathrooms</div>
                    </div>
                    {% endif %}
                    {% if sqft %}
                    <div class="text-center">
                        <div class="text-2xl font-bold text-brand-navy">{{ sqft }}</div>
                        <div class="text-sm text-slate-600">Sq Ft</div>
                    </div>
                    {% endif %}
                    {% if propertyType %}
                    <div class="text-center">
                        <div class="text-2xl font-bold text-brand-navy">{{ propertyType }}</div>
                        <div class="text-sm text-slate-600">Style</div>
                    </div>
                    {% endif %}
                </div>
                {% endif %}

                <!-- Renovation Specifications (if available) -->
                {% if renovationSpecs %}
                <div class="bg-white border border-slate-200 rounded-xl p-8 shadow-sm my-12">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-2xl font-bold text-brand-navy">Renovation Specifications</h3>
                        <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded-full">CERTIFIED INSPECTION</span>
                    </div>

                    {% if renovationSpecs.type == "grid" %}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-y-4 gap-x-12 text-sm">
                        {% for spec in renovationSpecs.items %}
                        <div class="flex justify-between border-b border-slate-100 pb-2">
                            <span class="text-slate-500">{{ spec.label }}</span>
                            <span class="font-semibold text-brand-navy">{{ spec.value }}</span>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}

                    <div class="mt-6 p-4 bg-slate-50 rounded-lg flex items-start gap-3">
                        <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                        <p class="text-sm text-slate-600 leading-relaxed">
                            <strong>Landlord Guarantee:</strong> We manage what we renovate. This property includes 24/7 emergency maintenance and quarterly systems checks to ensure your home stays in this condition.
                        </p>
                    </div>
                </div>
                {% endif %}

                <!-- Amenities -->
                {% if amenities %}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% for category in amenities %}
                    <div>
                        <h3 class="text-xl font-bold text-brand-navy mb-3">{{ category.title }}</h3>
                        {% if category.type == "list" %}
                        <ul class="space-y-2 text-slate-700">
                            {% for feature in category.items %}
                            <li class="flex items-center gap-2">
                                <span class="text-green-500">âœ“</span> {{ feature }}
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>

            <!-- Contact Sidebar -->
            <div class="bg-slate-50 rounded-lg p-6 h-fit">
                <h3 class="text-xl font-bold text-brand-navy mb-4">Interested in This Property?</h3>

                <form id="property-inquiry" action="" method="POST" class="space-y-6" novalidate>
                    <input type="hidden" name="_subject" value="Lead: {{ title }}">
                    <input type="hidden" name="_next" value="/thank-you.html">

                    <label for="name" class="block text-sm font-medium text-slate-700 mb-1">Full Name</label>
                    <input type="text" id="name" name="name" required class="input-base block w-full">

                    <label for="email" class="block text-sm font-medium text-slate-700 mb-1">Email</label>
                    <input type="email" id="email" name="email" required class="input-base block w-full">

                    <label for="phone" class="block text-sm font-medium text-slate-700 mb-1">Phone</label>
                    <input type="tel" id="phone" name="phone" required class="input-base block w-full">

                    <div class="flex items-center">
                        <input type="checkbox" id="veteran" name="veteran" class="mr-2" title="Military veteran status">
                        <label for="veteran" class="text-sm text-slate-700">U.S. Military Veteran</label>
                    </div>

                    <button type="submit" class="btn-primary w-full py-3">
                        Request Property Tour
                    </button>
                </form>

                <div class="mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex items-start gap-3">
                        <svg class="w-6 h-6 text-green-600 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v.01" />
                        </svg>
                        <div>
                            <h4 class="text-sm font-semibold text-green-800">Fair Market Guarantee</h4>
                            <p class="text-xs text-green-700 mt-1">This property follows fair market principles with transparent pricing</p>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <p class="text-sm text-slate-600">Call for immediate assistance</p>
                    <a href="tel:+19032831770" class="text-brand-navy font-semibold hover:text-brand-wood transition-colors" aria-label="Call us at 903-283-1770">
                        (903) 283-1770
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
</main>

{% block scripts %}
{% if beforeAfterImages %}
<script>
// Initialize before/after comparison slider
document.addEventListener('DOMContentLoaded', function () {
    // Slider functionality is handled via range input above
});
</script>
{% endif %}
{% endblock %}
